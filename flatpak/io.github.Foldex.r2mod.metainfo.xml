<?xml version="1.0" encoding="UTF-8"?>
<component type="console-application">
  <id>io.github.Foldex.r2mod</id>

  <name>R2Mod</name>
  <summary>Risk of Rain 2 Mod Manager</summary>
  <developer_name>Foldex</developer_name>
  <url type="homepage">https://github.com/Foldex/r2mod_cli</url>
  <url type="bugtracker">https://github.com/Foldex/r2mod_cli/issues</url>
  <metadata_license>CC0-1.0</metadata_license>
  <project_license>GPL-3.0-or-later</project_license>
  <update_contact>foldex|at|pm|dot|me</update_contact>

  <description>
    <p>
      R2Mod CLI is a mod manager for Risk of Rain 2, installing mods from Thunderstore.io.
    </p>
  </description>

  <categories>
    <category>Game</category>
    <category>Utility</category>
  </categories>

  <releases>
    <release version="1.3.2" type="stable" date="2022-03-26"/>
